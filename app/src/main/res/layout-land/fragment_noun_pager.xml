<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.example.snewnham.birkbecklatin.view.NounPagerFragment">

    <TextView
        android:id="@+id/nounDescription"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="NOUN_DESCRIPTION"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/noun_principal_parts1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="PRINCIPAL_PARTS1"
        android:textSize="20sp"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/nounDescription"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/nounDescription"/>

    <TextView
        android:id="@+id/noun_principal_parts2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="PRINCIPAL_PARTS2"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/noun_principal_parts1"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/noun_principal_parts1"/>

    <TextView
        android:id="@+id/englishNoun"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="ENGLISH_NOUN"
        android:textSize="15sp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/noun_principal_parts2"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/noun_principal_parts2"/>


</android.support.constraint.ConstraintLayout>
