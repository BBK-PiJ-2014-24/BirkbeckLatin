<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.newnham.app.birkbecklatin.view.VerbGameFragment">

    <TextView
        android:id="@+id/questionText"
        android:hint="questionText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button0"
        android:background="@drawable/button_rounded"
        android:hint="button0"
        android:textColor="@color/colorAccent"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintVertical_bias="0.325"/>

    <Button
        android:id="@+id/button1"
        android:background="@drawable/button_rounded"
        android:hint="button1"
        android:textColor="@color/colorAccent"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/button0"
        android:layout_marginLeft="-9dp"
        app:layout_constraintLeft_toLeftOf="@+id/button0"/>

    <Button
        android:id="@+id/button2"
        android:background="@drawable/button_rounded"
        android:hint="button2"
        android:textColor="@color/colorAccent"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/button1"/>

    <Button
        android:id="@+id/button3"
        android:background="@drawable/button_rounded"
        android:hint="button3"
        android:textColor="@color/colorAccent"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/button0"
        android:layout_marginLeft="166dp"
        app:layout_constraintTop_toTopOf="@+id/button0"
        android:layout_marginTop="-12dp"/>

    <Button
        android:id="@+id/button4"
        android:background="@drawable/button_rounded"
        android:hint="button4"
        android:textColor="@color/colorAccent"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        android:layout_marginRight="-10dp"
        app:layout_constraintRight_toRightOf="@+id/button3"/>

    <Button
        android:id="@+id/button5"
        android:background="@drawable/button_rounded"
        android:hint="button5"
        android:textColor="@color/colorAccent"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/button4"/>


    <TextView
        android:id="@+id/questionNumber"
        android:hint="questionNumber"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/buttonNext"
        android:layout_marginRight="348dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="37dp"
        app:layout_constraintHorizontal_bias="0.444"/>

    <Button
        android:id="@+id/buttonNext"
        android:background="@drawable/button_rounded"
        android:hint="Next"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="282dp"
        android:layout_marginRight="27dp"
        app:layout_constraintRight_toRightOf="parent"/>


</android.support.constraint.ConstraintLayout>
