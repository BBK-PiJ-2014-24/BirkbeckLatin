<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.example.snewnham.birkbecklatin.view.VerbGameFragment">

    <TextView
        android:id="@+id/questionText"
        android:hint="questionText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button0"
        android:hint="button0"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/button1"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        android:layout_marginLeft="154dp"/>

    <Button
        android:id="@+id/button1"
        android:hint="button1"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="99dp"/>

    <Button
        android:id="@+id/button2"
        android:hint="button2"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/button1"/>

    <Button
        android:id="@+id/button3"
        android:hint="button3"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/button2"/>

    <Button
        android:id="@+id/button4"
        android:hint="button4"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/button0"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/button0"/>

    <Button
        android:id="@+id/button5"
        android:hint="button5"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/button4"/>


    <TextView
        android:id="@+id/questionNumber"
        android:hint="questionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="300dp"
        app:layout_constraintRight_toLeftOf="@+id/buttonNext"
        android:layout_marginRight="348dp"/>

    <Button
        android:id="@+id/buttonNext"
        android:hint="Next"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="282dp"
        android:layout_marginRight="27dp"
        app:layout_constraintRight_toRightOf="parent"/>


</android.support.constraint.ConstraintLayout>
