<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.snewnham.birkbecklatin.view.VerbGameFragment">

    <TextView
        android:id="@+id/questionText"
        android:hint="questionText"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button0"
        android:background="@drawable/button_rounded"
        android:textColor="@color/colorAccent"
        android:hint="button0"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button1"
        android:background="@drawable/button_rounded"
        android:textColor="@color/colorAccent"
        android:hint="button1"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button0"
        android:layout_alignStart="@+id/button0"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/button2"
        android:background="@drawable/button_rounded"
        android:textColor="@color/colorAccent"
        android:hint="button2"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/button3"
        android:background="@drawable/button_rounded"
        android:textColor="@color/colorAccent"
        android:hint="button3"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/button4"
        android:background="@drawable/button_rounded"
        android:textColor="@color/colorAccent"
        android:hint="button4"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/button5"
        android:background="@drawable/button_rounded"
        android:textColor="@color/colorAccent"
        android:hint="button5"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_marginTop="20dp"/>


    <TextView
        android:id="@+id/questionNumber"
        android:textColor="@color/colorAccent"
        android:hint="questionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button5"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/buttonNext"
        android:background="@drawable/button_rounded"
        android:textColor="@color/colorAccent"
        android:hint="Next"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>




</RelativeLayout>
