<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.newnham.app.birkbecklatin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_birkbeck_latin"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <!-- SPLASH SCREEN -->
        <!-- ============= -->
        <activity
            android:name=".view.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MAIN ACTIVITY -->
        <!-- ============= -->
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name=".view.VerbPagerActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".view.VerbGameActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".view.NounGameActivity">
        </activity>

        <activity android:name=".view.VerbStatisticsActivity">
        </activity>

        <activity android:name=".view.NounStatisticsActivity">
        </activity>
        <activity android:name=".view.VerbPagerSelectionActivity">
        </activity>
        <activity android:name=".view.NounPagerSelectionActivity">
        </activity>
        <activity android:name=".view.NounPagerActivity">
        </activity>
        <activity android:name=".view.AboutActivity">
        </activity>
    </application>

</manifest>